rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    // Lock everything by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow your app data
    match /companies/{companyId} {
      allow read, write: if signedIn();

      match /{doc=**} {
        allow read, write: if signedIn();
      }
    }
  }
}
